<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Memory Game"
        android:fontFamily="@font/fontforgame"
        android:textColor="#2E4053"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The objective of the game is to find all
matching cards in least amount of time and moves as possible.
When a card is picked it will be turned around and another card must
be selected. If the two cards match, 3 points will be granted
and the cards will dissapear from the board. If the cards do not match,
both cards will be turned around and 1 point will be deducted from the score."
        android:textColor="#212F3C"
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="10sp"
        android:fontFamily="@font/fontformiddletext"
        />

    <Button
        android:id="@+id/Settingsbutton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#2ECC71"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="#154360 "
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#2ECC71"
        android:text="Start"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="30sp"
        app:backgroundTint="#1ABC9C" />


</LinearLayout>